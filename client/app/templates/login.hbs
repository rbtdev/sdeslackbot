
<div class ="small-8 medium-4 large-3 small-centered medium-centered large-centered columns">
  <div class="login-box">
    <div class="row">
      <div class="columns">
        <form {{action 'authenticate' on='submit'}}>
           <div class="row">
             <div class="columns">
    	  		   {{input name = 'email' placeholder='email' value=identification}}
             </div>
           </div>
          <div class="row">
             <div class="columns">
    	  		   {{input name='password' placeholder='password' type='password' value=password}}
             </div>
          </div>
          <div class="row">
            <div class="centered columns">
              <input type="submit" class="expand button" value="Log In"/>
            </div>
            <div class="centered columns">
              {{#link-to 'signup'}}Sign Up{{/link-to}}
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
