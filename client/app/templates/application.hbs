<link href="https://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">



<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
 <li>
    <div class="logo">
      {{#link-to 'profile' }}
        {{#if session.currentUser.avatar}}
          <img {{bind-attr src=session.currentUser.avatar}}/>
        {{else}}
          <img src="http://zurb.com/stickers/images/intro-foundation.png" />
       {{/if}}
      {{/link-to}}
    </div>
  </li>

     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="">{{#link-to 'index'}}Portals{{/link-to}}</li>
      <li class="divider"></li>
      
      <li class="">{{#link-to 'about'}}Messages{{/link-to}}</li>
      <li class="divider"></li>
      
      <li class="">{{#link-to 'contact'}}Events{{/link-to}}</li>
      <li class="divider"></li>

      {{#if session.isAuthenticated}}
        <li class=""><a {{action 'logout'}}>Logout</a></li>
        <li class="divider"></li>
      {{else}}
        <li class=""><a {{action 'login'}}>Login</a></li>
        <li class="divider"></li>
      {{/if}}
    </ul>
    <ul class="social-icons">
      <li><a href=""><i class="fi-telephone"></i></a></li>
      <li><a href=""><i class="fi-social-linkedin"></i></a></li>
      <li><a href=""><i class="fi-social-twitter"></i></a></li>
      <li><a href=""><i class="fi-social-facebook"></i></a></li>
    </ul>
  </section>
</nav>


<div class= "small-8 medium-4 large-3 small-centered medium-centered large-centered columns">
  <div class="row">
    <div id = 'flash-message'>
      {{#each flashMessages.queue as |flash|}}
       <span class = 'flash-message'>
          {{flash-message flash=flash messageStyle='foundation' class = 'radius'}}
        </span>
      {{/each}}
    </div>
  </div>
</div>

{{outlet}}


