<div id = 'profile' class = 'row centered'>
		<div class = "column small-6 medium-4 large-3">
			<div id= "upload-trigger">
	  		  {{#file-uploader isDisabled=controller.isUploading fileInputChanged="receiveFile" uploadProgress="uploadProgress" }}
	  		  	<div {{action 'triggerFileSelection'}}>
		  		  	{{#if session.currentUser.avatar}}
				    	<img syle = "float:left" {{bind-attr src=session.currentUser.avatar}}/>
				    {{else}}
				         <img src="http://zurb.com/stickers/images/intro-foundation.png" />
				     {{/if}}
				</div>
		      	<input type="file" id="file-upload">
			  {{/file-uploader}}
  			</div>
  			<div>
		  	  {{#if isUploading}}
			    <div class="progress">
			      <div class="bar" {{bind-attr style=progress}}></div>
			    </div>
			  {{else}}
			    <span>uploading...</span>
			  {{/if}}
			 </div>
		</div>
		<div class = "column small-6 medium-8 large-9">
			<div class = 'row'>
				<div class = "column">
					Name {{input placeholder = "Name" type = "text" value = model.name}}
				</div>
			</div>
			<div class = 'row'>
				<div class = "column">
					Email {{input placeholder = "email" type = "text" value = model.email}}
				</div>
			</div>		
		</div>
	
	{{outlet}}
</div>
